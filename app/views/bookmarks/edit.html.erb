<h1><%= @bookmark.url %></h1>

<%= form_for [@topic] do |f| %>
  <%= f.label :Topic %>
  <%= f.text_field :title, class: 'form-control', placeholder: "change topic name" %>
  <% end %>

  <%= form_for [@topic, @bookmark] do |f| %>
